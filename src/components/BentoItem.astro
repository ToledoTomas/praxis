---
interface Props {
  class?: string;
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<article
  class={`${Astro.props.class} col-span-5 relative rounded-xl backrop-blur-md border border-black/10 shadow-inner shadow-white/10`}
>
  <slot name="image" />
  <div
    class="select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full"
  >
    <h2 class="text-3xl font-semibold text-balance mb-4">{title}</h2>
    {
      subtitle && (
        <h3 class="text-3xl font-semibold text-sky-200/90 -mt-4">{subtitle}</h3>
      )
    }
    <slot name="content" />
  </div>
</article>
